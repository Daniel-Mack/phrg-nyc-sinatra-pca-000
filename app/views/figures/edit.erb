<h1>Update a Figure: </h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="PATCH">
<label>Figure Name: </label>
<input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
<br><br>

<label>Choose a title(s) and/or create a new one:</label>
<br><br>
<%Title.all.each do |title|%>
<input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>"><%='checked' if @figure.titles.include?(title)%><%=title.name%></input>
<%end%>
<br><br>

<label>Edit a Title:<input type="text" name="title[name]" id="new_title"></label>
<br><br>
<label>Choose a landmark(s) and/or create a new one:</label>
<br><br>

<%Landmark.all.each do |landmark|%>
<input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"> <%='checked' if @figure.landmarks.include?(landmark)%><%=landmark.name%></input><br>
<%end%>
<label>Edit a Landmark:<input type="text" name="landmark[name]" id="new_landmark"></label>
<label for="landmark[year_completed]">Year Completed:</label>
<input type="text" name="landmark[year_completed]" id="landmark_year_completed" value="<%=@landmark_year_completed%>">
<br><br>
<input type="submit" value="Edit Figure"></input>
</form>
